  	    android:layout_marginTop="10dp"
  	    android:ems="10"
  	    android:text="path3" >
  	</EditText>
  	
  	</LinearLayout>

 	
 	<Button
  	    android:id="@+id/button1"
  	    android:layout_width="wrap_content"
  	    android:layout_height="wrap_content"
  	    android:layout_alignLeft="@+id/editText1"
  	    android:layout_alignRight="@+id/toggleButton1"
